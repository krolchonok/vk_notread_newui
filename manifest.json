{
  "manifest_version": 2,
  "name": "VK Нечиталка",
  "version": "1.0",
  "description": "Отлавливает запросы к VK и не дает отправить уведомление о прочтении.",
  "permissions": ["storage", "webRequest", "webRequestBlocking", "<all_urls>", "activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/show.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icons/show.png"
  }
}
